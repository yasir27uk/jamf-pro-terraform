jamfpro_auth_method = "oauth2"
jamfpro_instance_fqdn = "https://yourcompany.jamfcloud.com"

jamfpro_client_id     = "your_client_id"
jamfpro_client_secret = "your_client_secret"

profile_name        = "Company - PPPC + System Extensions"
profile_description = "Managed by Terraform"

redeploy_on_update  = "Newly Assigned"
distribution_method = "Install Automatically"

allow_all_computers = false
scope = {
  all_computers      = false
  computer_group_ids = [123]
}

# Generator-based payload definition (Terraform-only)
# Adjust payload_type + settings to the payload you want (Wi-Fi shown as an example).
payload_header = {
  payload_description_header  = "Managed by Terraform"
  payload_enabled_header      = true
  payload_organization_header = "Company"
  payload_type_header         = "Configuration"
  payload_version_header      = 1
  payload_display_name_header = "Company - PPPC + System Extensions"
  payload_scope_header        = "System"
}

payload_content = {
  payload_display_name = "Company WiFi"
  payload_enabled      = true
  payload_organization = "Company"
  payload_type         = "com.apple.wifi.managed"
  payload_version      = 1
  payload_scope        = "System"

  settings = {
    SSID_STR = "CompanySSID"
    AutoJoin = true
  }
}


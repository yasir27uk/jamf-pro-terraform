jamfpro_auth_method = "oauth2"
jamfpro_instance_fqdn = "https://yourcompany.jamfcloud.com"

jamfpro_client_id     = "your_client_id"
jamfpro_client_secret = "your_client_secret"

profile_name        = "Company - PPPC + System Extensions"
profile_description = "Managed by Terraform"

mobileconfig_path = "profiles/company.mobileconfig"

redeploy_on_update  = "Newly Assigned"
distribution_method = "Install Automatically"

allow_all_computers = false
scope = {
  all_computers      = false
  computer_group_ids = [123]
}

